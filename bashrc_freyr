#!/bin/bash

# .bashrc
# Author: Loren Matilsky
# Created: 07/07/2016

echo "=============================="
echo "Executing ~/.bashrc"
echo "ls -l ~/.bashrc"
echo `ls -l ~/.bashrc`
echo "=============================="

# color code directory contents
alias ls="ls --color='auto'"

PS1="\$(pwd) "

# Enable auto-completion in bash
source ~/git-bash-completion

# unload all module files, then load desired ones
module purge
#module load intel
#module load openmpi
module load ffmpeg

# Extra appendages to PATH to allow 
# programs to be installed locally
export PATH=$PATH:~/bin
export PATH=$PATH:~/usr/bin
export HOME_DEFAULT="$HOME"

# papers directories
export so="$HOME_DEFAULT/Desktop/00_Solar"
export st="$HOME_DEFAULT/Desktop/00_Stellar"
export fl="$HOME_DEFAULT/Desktop/00_Fluids"
export ast="$HOME_DEFAULT/Desktop/00_General_Astronomy"

# some aliases for freyr
alias vncv='vncviewer'
alias fn='find `pwd` -name ' # fn for "full name"
alias lo='libreoffice'

source ~/environment/bashrc_common
